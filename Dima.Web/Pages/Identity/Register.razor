@page "/register"
@layout HeadlessLayout
@inherits RegisterPage

<PageTitle>Dima - Register</PageTitle>

<MudGrid Justify="Justify.Center">
    <MudItem xs="12" sm="12" md="8" lg="6" xl="6" xxl="6">
        <MudPaper Class="mud-width-full pa-8">
            <div class="d-flex justify-center py-8">
                <MudImage Src="images/dima.png"
                          Alt="Dima - Finances"
                          Width="200" />
            </div>
            <EditForm Model="@InputModel" OnValidSubmit="@OnValueSubmitAsync">
                <DataAnnotationsValidator/>
                <ValidationSummary />

                <MudTextField T="string"
                              Label="Email"
                              HelperText="Required field"
                              InputType="InputType.Email"
                              For="@(() => InputModel.Email)"
                              @bind-Value="InputModel.Email"/>

                <MudTextField T="string"
                              Label="Password"
                              HelperText="Required field"
                              InputType="InputType.Password"
                              For="@(() => InputModel.Password)"
                              @bind-Value="InputModel.Password" />

                <div class="d-flex mt-8">
                    @if(IsBusy)
                    {
                        <MudProgressCircular Color="Color.Info" Indeterminate="true" />
                    }
                    else
                    {
                        <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary">Register</MudButton>
                        <MudSpacer />
                        <MudButton Href="/login">Back to login</MudButton>
                    }
                </div>
            </EditForm>
        </MudPaper>
    </MudItem>
</MudGrid>